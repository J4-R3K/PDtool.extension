<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Text Style"
        Height="320"
        Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="Font:" Grid.Row="0" Margin="0,0,0,4"/>
    <ComboBox x:Name="FontCombo" Grid.Row="1" Height="25" IsEditable="True"/>

    <TextBlock Text="Text Size (mm):" Grid.Row="2" Margin="0,10,0,4"/>
    <TextBox x:Name="SizeBox" Grid.Row="3" Height="23"/>

    <TextBlock Text="Width Factor:" Grid.Row="4" Margin="0,10,0,4"/>
    <TextBox x:Name="WidthBox" Grid.Row="5" Height="23"/>

    <StackPanel Orientation="Horizontal" Grid.Row="6" Margin="0,10,0,0">
      <CheckBox x:Name="BoldCheck" Content="Bold" Margin="0,0,20,0"/>
      <CheckBox x:Name="ItalicCheck" Content="Italic"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Grid.Row="7" HorizontalAlignment="Right" Margin="0,20,0,0">
      <Button Content="Apply" Width="80" Margin="0,0,10,0" Click="OnApply"/>
      <Button Content="Cancel" Width="80" Click="OnCancel"/>
    </StackPanel>
  </Grid>
</Window>
